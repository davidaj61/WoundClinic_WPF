<Window x:Class="WoundClinic_WPF.UI.winCares"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoundClinic_WPF.UI"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="ثبت خدمات" SizeToContent="Manual" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <hc:UniformSpacingPanel Orientation="Vertical"  Grid.Column="0" Spacing="5" >
            <hc:TextBox Name="txtName" hc:InfoElement.Title="نام پانسمان/دارو:"  Margin="5,0,20,0" Width="200"/>
            <CheckBox x:Name="cbxHasPrice" Content="قیمت ثابت دارد"  Margin="10,0,20,0" VerticalAlignment="Center"/>
            <TextBlock Text="قیمت:"  Margin="0,0,5,0" VerticalAlignment="Center"/>
            <hc:TextBox Name="txtPrice" hc:InfoElement.Title="فی/قیمت:"   Margin="0,0,20,0" Width="200"/>
            <CheckBox Name="cbxIsDrug"  Margin="10,0,30,0" Content="دارو است" VerticalAlignment="Center"/>
            <CheckBox Name="cbxIsActive" Content="فعال/غیرفعال"  Margin="10,17,30,0" VerticalAlignment="Center" IsChecked="True"/>
            <Button x:Name="btnAddList" Grid.Column="2" Click="btnAddList_Click" Background="Transparent" BorderBrush="Black" HorizontalAlignment="Right" Padding="0,0,0,0" Margin="0,20,15,0" VerticalAlignment="Center">
                <Image Source="/UI/Assets/add-icon.png" Width="30" Margin="0,0,1,0"/>
            </Button>
        </hc:UniformSpacingPanel>
        <DataGrid Name="dgvDressing" Grid.Column="1" ItemsSource="{Binding dressings}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="نام پانسمان/دارو" Binding="{Binding DressingName}"/>
                <DataGridCheckBoxColumn Header="قیمت ثابت دارد" Binding="{Binding HasConstPrice}"/>
                <DataGridTextColumn Header="قیمت" Binding="{Binding Price}"/>
                <DataGridCheckBoxColumn Header="دارو" Binding="{Binding IsDrug}"/>
                <DataGridCheckBoxColumn Header="فعال/غیرفعال" Binding="{Binding IsActive}"/>
            </DataGrid.Columns>

        </DataGrid>


    </Grid>
</Window>
