<Window x:Class="WoundClinic_WPF.UI.winCares"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoundClinic_WPF.UI"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="ثبت خدمات" SizeToContent="Manual" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="نام پانسمان/دارو:" Grid.Row="0"/>
        <hc:TextBox Grid.Row="0" Margin="100,0,0,0" Width="200"/>

        <TextBlock Text="قیمت ثابت دارد:" Grid.Row="1" Margin="0,10,0,0"/>
        <CheckBox IsChecked="{Binding Dressing.HasConstPrice}" Grid.Row="1" Margin="100,10,0,0"/>

        <TextBlock Text="قیمت:" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Dressing.Price, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="100,10,0,0" Width="200"/>

        <TextBlock Text="دارو است:" Grid.Row="3" Margin="0,10,0,0"/>
        <CheckBox IsChecked="{Binding Dressing.IsDrug}" Grid.Row="3" Margin="100,10,0,0"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ذخیره" Command="{Binding SaveCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="انصراف" Command="{Binding CancelCommand}" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
