<UserControl x:Class="WoundClinic_WPF.UI.UserControls.DressingCareUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:WoundClinic_WPF.UI.UserControls"
             xmlns:dtp="clr-namespace:PersianDateControlsPlus;assembly=PersianDateControlsPlus" 
             FlowDirection="RightToLeft"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontFamily="{StaticResource DefaultFont}" FontSize="{StaticResource DefaultFontSize}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <hc:UniformSpacingPanel Spacing="20" Margin="5,5,0,5" >
                <RadioButton x:Name="rbtIranian" IsChecked="True" Content="ایرانی" />
                <RadioButton x:Name="rbtIsAtba" Content="اتباع" />
            </hc:UniformSpacingPanel>
            <hc:ElementGroup Layout="Stack">
                <Label Content="در باکس مقابل کد ملی افراد ایرانی یا نام اتباع را جستجو کنید"/>
                <hc:SearchBar Width="200" />
            </hc:ElementGroup>
        </StackPanel>
    </Grid>
</UserControl>
