<UserControl x:Class="WoundClinic_WPF.UI.UserControls.ucUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:WoundClinic_WPF.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FlowDirection="RightToLeft" Loaded="UserControl_Loaded">
    <DockPanel LastChildFill="True">

        <StackPanel DockPanel.Dock="Top" Margin="5,2">
            <hc:ElementGroup Layout="Stack" Padding="3">
                <hc:SearchBar Name="txtSearch"  Width="250" TextChanged="Text_Changed" hc:InfoElement.Placeholder="جستجو"   />
            </hc:ElementGroup>
        </StackPanel>
        <DataGrid Name="dgvSearch" Margin="2,5" HeadersVisibility="All" RowHeaderWidth="60" AutoGenerateColumns="False"  hc:DataGridAttach.ShowRowNumber="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="کد ملی" Binding="{Binding NationalCodeString}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="نام و نام خانوادگی" Binding="{Binding FullName}" IsReadOnly="True" Width="Auto"/>
                <DataGridCheckBoxColumn Header="وضعیت فعالیت" Width=" auto  " Binding="{Binding IsActive}" IsReadOnly="True" /> 
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <hc:UniformSpacingPanel>
                                <Button Content="ویرایش" Style="{StaticResource ButtonWarning}" Click="btnEdit_Click" hc:IconElement.Geometry="{StaticResource DropperGeometry}"/>
                                <Button Content="بازنشانی رمز" Style="{StaticResource ButtonPrimary}" Click="btnSelect_Click" hc:IconElement.Geometry="{StaticResource CheckedGeometry}"/>
                                <ToggleButton IsChecked="{Binding IsActive}" Margin="5,9" HorizontalAlignment="Center" Style="{StaticResource ToggleButtonSwitch}" hc:VisualElement.HighlightBrush="{DynamicResource DangerBrush}"/>
                            </hc:UniformSpacingPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
