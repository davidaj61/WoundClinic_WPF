<UserControl x:Class="UI.UserControls.ucAdmissionInDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FlowDirection="RightToLeft" FontFamily="{StaticResource DefaultFont}" FontSize="{StaticResource DefaultFontSize}">
    <Grid>
        <DataGrid x:Name="dgvAdmission" HeadersVisibility="All" RowHeaderWidth="60" AutoGenerateColumns="False"  hc:DataGridAttach.ShowRowNumber="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="کد ملی" Binding="{Binding Patient.Person.NationalCodeString}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="نام و نام خانوادگی" Binding="{Binding Patient.Person.FullName}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="شماره موبایل" Binding="{Binding Patient.MobileNumberString}" IsReadOnly="True" Width="Auto"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <hc:UniformSpacingPanel>
                                <Button x:Name="btnEdit" Content="ویرایش" Style="{StaticResource ButtonWarning}" Click="btnEdit_Click" hc:IconElement.Geometry="{StaticResource DropperGeometry}" Visibility="Collapsed" />
                                <Button Content="چاپ" Style="{StaticResource ButtonPrimary}" Click="btnPrint_Click" hc:IconElement.Geometry="{StaticResource PageModeGeometry}"/>
                            </hc:UniformSpacingPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>    
            
    </Grid>
</UserControl>
