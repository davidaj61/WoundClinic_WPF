<Application x:Class="WoundClinic_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WoundClinic_WPF"
              xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:System="clr-namespace:System;assembly=System.Runtime">

    <Application.Resources>

        <ResourceDictionary>
            <Style TargetType="{x:Type Control}">
                <Setter Property="FontFamily" Value="pack://application:,,,,UI/Assets/Fonts/#Vazirmatn-SemiBold" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/PersianDateControlsPlus;component/Themes/PersianDateControlsPlus.Defaults.xaml" />
                <ResourceDictionary>
                    <FontFamily x:Key="DefaultFont">pack://application:,,,,UI/Assets/Fonts/#Vazirmatn-SemiBold</FontFamily>
                    <System:Double x:Key="DefaultFontSize">14</System:Double>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
